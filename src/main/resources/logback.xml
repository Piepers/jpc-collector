      </pattern>
    </encoder>
  </appender>

  <logger name="jpc-logger" level="DEBUG" additivity="false">
    <appender-ref ref="JPCAPPENDER"/>
  </logger>

  <logger name="jpc-logger-int" level="DEBUG" additivity="false">
    <appender-ref ref="JPCAPPENDERI"/>
  </logger>

  <logger name="jpc-logger-byte" level="DEBUG" additivity="false">
    <appender-ref ref="JPCAPPENDERB"/>
  </logger>

  <logger name="jpc-logger-string" level="DEBUG" additivity="false">
    <appender-ref ref="JPCAPPENDERS"/>
  </logger>

  <logger name="jpc-logger-data" level="DEBUG" additivity="false">
    <appender-ref ref="JPCAPPENDERD"/>
  </logger>

  <logger name="me.piepers" level="DEBUG" additivity="false">
    <appender-ref ref="FILE" />
    <appender-ref ref="STDOUT" />
  </logger>

  <logger name="com.lambdaworks" level="ERROR" additivity="false">
    <appender-ref ref="FILE" />
    <appender-ref ref="STDOUT" />
  </logger>

  <logger name="io.vertx" level="ERROR" additivity="false">
    <appender-ref ref="FILE" />
    <appender-ref ref="STDOUT" />
  </logger>

  <logger name="com.hazelcast" level="ERROR" additivity="false">
    <appender-ref ref="FILE" />
    <appender-ref ref="STDOUT" />
  </logger>

  <logger name="io.netty" level="ERROR" additivity="false">
    <appender-ref ref="FILE" />
    <appender-ref ref="STDOUT" />
  </logger>

  <root>
    <appender-ref ref="FILE" />
    <appender-ref ref="STDOUT" />
  </root>
</configuration>

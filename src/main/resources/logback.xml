      <pattern>%date - %msg%n
      </pattern>
    </encoder>
  </appender>

  <appender name="JPCAPPENDERD" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>jpcd.log</file>
    <append>true</append>
    <!-- set immediateFlush to false for much higher logging throughput -->
    <immediateFlush>true</immediateFlush>
